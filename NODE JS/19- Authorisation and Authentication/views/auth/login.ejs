<%- include('../partials/title') %>

<body class="min-h-screen bg-gradient-to-br from-pink-100 via-white to-red-200 flex flex-col">
  <%- include('../partials/header') %>

  <main class="flex-grow flex items-center justify-center">
    <div class="bg-white/95 shadow-2xl rounded-3xl p-12 w-full max-w-xl border border-red-200 ring-2 ring-red-100/60 backdrop-blur-md">
      <h2 class="text-4xl text-red-500 font-extrabold text-center mb-8 tracking-tight drop-shadow-lg">Login to Your Account</h2>
      <form action="/login" method="POST" class="space-y-7">
        <div>
          <label for="username" class="block text-gray-700 font-semibold mb-2">Email / Username</label>
          <input
            type="text"
            id="username"
            name="username"
            placeholder="Enter your username or email"
            required
            class="w-full px-5 py-3 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-pink-300 bg-gray-50 shadow-sm transition"
          >
        </div>
        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            required
            class="w-full px-5 py-3 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-pink-300 bg-gray-50 shadow-sm transition"
          >
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input type="checkbox" id="remember" name="remember" class="form-checkbox h-5 w-5 text-pink-500 rounded focus:ring-pink-300">
            <label for="remember" class="ml-2 text-gray-700">Remember me</label>
          </div>
          <a href="#" class="text-pink-500 hover:text-pink-700 underline text-sm font-semibold">Forgot password?</a>
        </div>
        <div>
          <button
            type="submit"
            class="w-full bg-gradient-to-r from-pink-400 to-red-500 hover:from-pink-500 hover:to-red-600 text-white font-bold py-3 px-6 rounded-full shadow-xl transition duration-200 focus:outline-none focus:ring-2 focus:ring-pink-300 text-xl tracking-wide"
          >
            <span class="inline-flex items-center gap-2">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.655 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
              Login
            </span>
          </button>
        </div>
        <div class="text-center text-gray-500 mt-4">
          Don't have an account? <a href="/signup" class="text-pink-500 hover:text-pink-700 underline font-semibold">Sign up</a>
        </div>
      </form>
    </div>
  </main>
</body>
</html>
