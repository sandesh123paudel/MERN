<%- include('../partials/title') %>
  </head>
  <body>
    <%- include('../partials/header') %>
    <main class="container mx-auto bg-gradient-to-br from-white via-gray-100 to-gray-200 shadow-2xl rounded-2xl p-10 mt-12 max-w-4xl">
      <div class="flex flex-col items-center mb-8">
        <div class="w-full flex items-center mb-4">
          <a href="javascript:history.back()" class="flex items-center text-red-500 hover:text-red-700 font-semibold">
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
            </svg>
            Back
          </a>
        </div>
        <h2 class="text-4xl text-red-600 font-extrabold text-center mb-2 drop-shadow-lg tracking-wide">
          <%= home.houseName %>
        </h2>
        <div class="flex items-center space-x-2">
          <span class="inline-block bg-gray-400 text-white px-3 py-1 rounded-full text-sm font-semibold shadow">
            <%= home.rating %> ⭐
          </span>
          <span class="text-gray-500 text-sm">|</span>
          <span class="text-gray-700 text-sm font-medium">
            <%= home.location %>
          </span>
        </div>
      </div>
      <div class="flex flex-col md:flex-row gap-8 items-center">
        <div class="w-full md:w-1/2">
          <img src="<%= home.image %>" alt="<%= home.houseName %>" class="w-full h-72 object-cover rounded-xl border-4 border-red-200 shadow-lg transition-transform duration-300 hover:scale-105">
        </div>
        <div class="w-full md:w-1/2 space-y-4">
          <h3 class="text-2xl font-bold text-gray-800 mb-2"><%= home.houseName %></h3>
          <p class="text-gray-700 mb-1"><span class="font-semibold">Location:</span> <%= home.location %></p>
          <p class="text-gray-700 mb-1"><span class="font-semibold">Price:</span> <span class="text-green-600 font-bold">$<%= home.price %></span></p>
          <p class="text-gray-700 mb-1"><span class="font-semibold">Rating:</span> <%= home.rating %> ⭐</p>
          <button class="mt-4 px-6 py-2 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-lg shadow transition duration-200">
            Book Now
          </button>
        </div>
      </div>
    </main>
  </body>
</html>