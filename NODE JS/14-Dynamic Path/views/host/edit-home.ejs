  <%- include('../partials/title') %>

  <body class="bg-gray-100 text-gray-800 font-sans">


    <!-- Navbar -->
<%- include('../partials/header') %>
   
    <!-- Main Content -->
    <main class="mt-10 flex flex-col items-center">
      <h1 class="text-3xl font-semibold mb-8">Edit Your Home</h1>

      <form action="/host/edit-home/" method="POST"
        class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
        <div class="mb-4">
          <label for="title" class="block text-gray-700 font-medium mb-2">House Name</label>
          <input
            type="text"
            id="title"
            name="houseName"
            value="<%=home.houseName%>"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-400" />

             <label for="price-pn" class="block text-gray-700 font-medium mb-2">Price Per Night </label> 
             <input
            type="number"
            id="price"
            name="price"
               value="<%=home.price%>"
          
            required
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-400" />
          
             <label for="location" class="block text-gray-700 font-medium mb-2">Location </label> 
             <input
            type="text"
            id="location"
            name="location"
               value="<%=home.location%>"
          
            required
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-400" />

             <label for="rating" class="block text-gray-700 font-medium mt-2 mb-2">Rating </label> 
             <div class="flex space-x-6 mb-4">
            <% for(let i = 1; i <= 5; i++) { %>
              <label class="flex items-center space-x-2">
               
                <input
                  type="radio"
                  id="rating-<%= i %>"
                  name="rating"
                  value="<%= i %>"
                  <% if(home.rating == i) { %>checked<% } %>
                >
                <span><%= i %></span>
              </label>
            <% } %> </div>
 
</div>

<label for="image" class="block text-gray-700 font-medium mb-2">Image URL </label> 
            <input type="text" value="<%=home.image%>" name="image" id="image"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-400 mb-2" />

        </div>

        <button
          type="submit"
          class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded transition duration-200">
          Edit Home
        </button>
      </form>
    </main>
  </body>
</html>
