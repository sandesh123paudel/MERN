<header
  class="bg-gradient-to-r from-pink-400 via-red-500 to-red-600 text-white py-5 shadow-xl sticky top-0 z-50">
  <nav
    class="container mx-auto flex flex-wrap items-center justify-between gap-4 md:gap-8">
    <div class="flex flex-wrap items-center gap-4 md:gap-6">
      <a href="/"
        class="flex items-center gap-2 px-5 py-2 text-lg font-bold tracking-wide transition-all duration-200 shadow-sm
        <%= currentPage==='index'?'bg-white text-red-500 border-white rounded-full':'bg-gradient-to-r from-pink-400/80 via-red-500/80 to-red-600/80 hover:bg-white hover:text-white border-white rounded-full' %>">
        <svg
          class="w-6 h-6 <%= currentPage==='index' ? 'text-pink-500' : 'text-white group-hover:text-pink-500' %>"
          fill="none" stroke="currentColor" stroke-width="2"
          viewBox="0 0 24 24"><path stroke-linecap="round"
            stroke-linejoin="round" d="M12 3l8 8-8 8-8-8z" /></svg>
        airbnb
      </a>
      <% if (isLoggedIn ) { %>
      <% if (user && user.userType==='guest' ) { %>

      <a href="/homes"
        class="flex items-center gap-2 px-5 py-2 text-base font-semibold transition-all duration-200 shadow-sm <%= currentPage==='home'?'bg-white text-red-500 border-white rounded-full':'bg-gradient-to-r from-pink-400/80 via-red-500/80 to-red-600/80 hover:bg-white hover:text-white border-white rounded-full' %>">
        <svg
          class="w-5 h-5 <%= currentPage==='home' ? 'text-pink-500' : 'text-white group-hover:text-pink-500' %>"
          fill="none" stroke="currentColor" stroke-width="2"
          viewBox="0 0 24 24"><path stroke-linecap="round"
            stroke-linejoin="round"
            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0h6" /></svg>
        Homes-List
      </a>
      <a href="/bookings"
        class="flex items-center gap-2 px-5 py-2 text-base font-semibold transition-all duration-200 shadow-sm <%= currentPage==='bookings'?'bg-white text-red-500 border-white rounded-full':'bg-gradient-to-r from-pink-400/80 via-red-500/80 to-red-600/80 hover:bg-white hover:text-white border-white rounded-full' %>">
        <svg
          class="w-5 h-5 <%= currentPage==='bookings' ? 'text-pink-500' : 'text-white group-hover:text-pink-500' %>"
          fill="none" stroke="currentColor" stroke-width="2"
          viewBox="0 0 24 24"><path stroke-linecap="round"
            stroke-linejoin="round"
            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
        Bookings
      </a>
      <a href="/favourites"
        class="flex items-center gap-2 px-5 py-2 text-base font-semibold transition-all duration-200 shadow-sm <%= currentPage==='favourites'?'bg-white text-red-500 border-white rounded-full':'bg-gradient-to-r from-pink-400/80 via-red-500/80 to-red-600/80 hover:bg-white hover:text-white border-white rounded-full' %>">
        <svg
          class="w-5 h-5 <%= currentPage==='favourites' ? 'text-pink-500' : 'text-white group-hover:text-pink-500' %>"
          fill="none" stroke="currentColor" stroke-width="2"
          viewBox="0 0 24 24"><path stroke-linecap="round"
            stroke-linejoin="round"
            d="M4.318 6.318a4.5 4.5 0 016.364 0L12 7.636l1.318-1.318a4.5 4.5 0 116.364 6.364L12 21.364l-7.682-7.682a4.5 4.5 0 010-6.364z" /></svg>
        Favourites
      </a>
      <%}else{%>

      <a href="/host/host-home-list"
        class="flex items-center gap-2 px-5 py-2 text-base font-semibold transition-all duration-200 shadow-sm <%= currentPage==='host-homes'?'bg-white text-red-500 border-white rounded-full':'bg-gradient-to-r from-pink-400/80 via-red-500/80 to-red-600/80 hover:bg-white hover:text-white border-white rounded-full' %>">
        <svg
          class="w-5 h-5 <%= currentPage==='host-homes' ? 'text-pink-500' : 'text-white group-hover:text-pink-500' %>"
          fill="none" stroke="currentColor" stroke-width="2"
          viewBox="0 0 24 24"><path stroke-linecap="round"
            stroke-linejoin="round"
            d="M20 21V7a2 2 0 00-2-2H6a2 2 0 00-2 2v14" /></svg>
        Host Homes
      </a>
      <a href="/host/add-home"
        class="flex items-center gap-2 px-5 py-2 text-base font-semibold transition-all duration-200 shadow-sm <%= currentPage==='addHome'?'bg-white text-red-500 border-white rounded-full':'bg-gradient-to-r from-pink-400/80 via-red-500/80 to-red-600/80 hover:bg-white hover:text-white border-white rounded-full' %>">
        <svg
          class="w-5 h-5 <%= currentPage==='addHome' ? 'text-pink-500' : 'text-white group-hover:text-pink-500' %>"
          fill="none" stroke="currentColor" stroke-width="2"
          viewBox="0 0 24 24"><path stroke-linecap="round"
            stroke-linejoin="round" d="M12 4v16m8-8H4" /></svg>
        Add Home
      </a>
      <%}%>

      <% } %>
    </div>
    <div class="flex items-center gap-4">
      <% if(!isLoggedIn) {%>
      <a href="/login"
        class="flex items-center gap-2 px-5 py-2 text-base font-semibold transition-all duration-200 shadow-sm <%= currentPage==='login'?'bg-white text-red-500 border-white rounded-full':'bg-gradient-to-r from-pink-400/80 via-red-500/80 to-red-600/80 hover:bg-white hover:text-white border-white rounded-full' %>">
        <svg
          class="w-5 h-5 <%= currentPage==='login' ? 'text-pink-500' : 'text-white group-hover:text-pink-500' %>"
          fill="none" stroke="currentColor" stroke-width="2"
          viewBox="0 0 24 24"><path stroke-linecap="round"
            stroke-linejoin="round" d="M5 12h14M12 5l7 7-7 7" /></svg>
        Login
      </a>
      <a href="/signup"
        class="flex items-center gap-2 px-5 py-2 text-base font-semibold transition-all duration-200 shadow-sm <%= currentPage==='signup'?'bg-white text-red-500 border-white rounded-full':'bg-gradient-to-r from-pink-400/80 via-red-500/80 to-red-600/80 hover:bg-white hover:text-white border-white rounded-full' %>">
        <svg
          class="w-5 h-5 <%= currentPage==='signup' ? 'text-pink-500' : 'text-white group-hover:text-pink-500' %>"
          fill="none" stroke="currentColor" stroke-width="2"
          viewBox="0 0 24 24"><path stroke-linecap="round"
            stroke-linejoin="round"
            d="M16 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2m16-10V7a4 4 0 00-4-4H8a4 4 0 00-4 4v4m16 0a4 4 0 01-4 4H8a4 4 0 01-4-4m16 0V7m0 4v4" /></svg>
        SignUp
      </a>
      <%} else{%>
      <form action="/logout" method="POST" class="inline">
        <button type="submit"
          class="flex items-center gap-2 px-5 py-2 text-base font-semibold transition-all duration-200 shadow-sm bg-gradient-to-r from-pink-400/80 via-red-500/80 to-red-600/80 hover:bg-white hover:text-white border-white rounded-full">
          <svg
            class="w-5 h-5 <%= currentPage==='logout' ? 'text-pink-500' : 'text-white group-hover:text-pink-500' %>"
            fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24"><path stroke-linecap="round"
              stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7" /></svg>
          LogOut
        </button>
      </form>
      <%}%>
    </div>
  </nav>
</header>